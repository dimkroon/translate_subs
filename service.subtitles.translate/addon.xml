<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.subtitles.translate" name="translate subs" version="0.0.0-alpha" provider-name="Dim Kroon">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.codequick"/>
  </requires>
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.python.library" library="libs"/>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">Automatically translate subtitles using translatepy</summary>
    <description lang="en_GB">
      This is the python package translatepy and it's dependencies packed for Kodi plus a view extras to perform automatic translation subtitles from various online translation services.
    </description>
    <disclaimer lang="en_GB">
      This addon is distributed in the hope that it will be useful, but WITHOUT ANY WARRANTY; without even the implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.
    </disclaimer>
    <language>en</language>
    <license>GPL-2.0-or-later</license>
    <forum />
    <source>https://github.com/dimkroon/translate_subs</source>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart />
    </assets>
    <news>
      First attempt.
    </news>
    <reuselanguageinvoker>true</reuselanguageinvoker>
  </extension>
</addon>
