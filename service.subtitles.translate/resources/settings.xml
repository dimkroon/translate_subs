<?xml version="1.0" encoding="UTF-8"?>
<settings version="1">
    <section id="plugin.subtitles.translate">
        <!-- General -->
        <category id="general" label="30100" help="">
			<group id="grp1" label="30101">
				<setting id="subtitles_color" label="30103" type="boolean" help="30303">
					<level>0</level>
					<default>true</default>
					<control type="toggle"/>
				</setting>
				<setting id="subtitles_translate" label="30107" type="boolean" help="30307">
					<level>0</level>
					<default>true</default>
					<control type="toggle"/>
				</setting>
				<setting id="subtitles_filter" label="30108" type="integer" help="30308">
					<level>0</level>
					<default>0</default>
					<constraints>
						<options>
							<option label="no filter">0</option>
							<option label="text in brackets">1</option>
							<option label="lines of all caps">2</option>
							<option label="both brackets and all caps">3</option>
						</options>
					</constraints>
					<control type="spinner" format="string"/>
					<dependencies>
						<dependency type="enable" setting="subtitles_show">true</dependency>
					</dependencies>
				</setting>
			</group>
			<group id="grp2" label="30110">
				<setting id="log-handler" label="30111" type="string" help="30311">
					<level>2</level>
					<default>Kodi log</default>
					<constraints>
						<allowempty>false</allowempty>
					</constraints>
					<control type="button" format="action">
						<data>RunPlugin(plugin://plugin.video.viwx/resources/lib/settings/change_logger)</data>
					</control>
				</setting>
				<setting id="log-level" label="30113" type="integer" help="30313">
					<level>3</level>
					<default>0</default>
					<constraints>
						<options>
							<option label="debug">0</option>
							<option label="info">1</option>
							<option label="warning">2</option>
							<option label="error">3</option>
						</options>
					</constraints>
					<control type="spinner" format="string"/>
				</setting>
			</group>
        </category>
    </section>
</settings>
